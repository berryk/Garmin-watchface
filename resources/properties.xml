<?xml version="1.0" encoding="utf-8"?>
<!--
    Properties for GMT World Time Watchface
    Default values for configurable settings

    Using embedded timezone rules with integer city IDs
    Zone IDs correspond to cities in TzHelper.mc
-->
<properties>
    <!-- Zone 1 (Top Left) - Default: London (ID 0) -->
    <property id="Zone1" type="number">0</property>

    <!-- Zone 2 (Top Right) - Default: Hong Kong (ID 13) -->
    <property id="Zone2" type="number">13</property>

    <!-- Zone 3 (Bottom Left) - Default: New York (ID 4) -->
    <property id="Zone3" type="number">4</property>

    <!-- Zone 4 (Bottom Right) - Default: Los Angeles (ID 7) -->
    <property id="Zone4" type="number">7</property>
</properties>
