<?xml version="1.0" encoding="utf-8"?>
<!--
    Properties for GMT World Time Watchface
    Default values for configurable settings
-->
<properties>
    <!-- City 1 (Top Left) - Default: London -->
    <property id="City1Label" type="string">LN</property>
    <property id="City1Offset" type="number">0</property>
    <property id="City1DST" type="boolean">false</property>

    <!-- City 2 (Top Right) - Default: Hong Kong -->
    <property id="City2Label" type="string">HK</property>
    <property id="City2Offset" type="number">8</property>
    <property id="City2DST" type="boolean">false</property>

    <!-- City 3 (Bottom Left) - Default: New York -->
    <property id="City3Label" type="string">NY</property>
    <property id="City3Offset" type="number">-5</property>
    <property id="City3DST" type="boolean">false</property>

    <!-- City 4 (Bottom Right) - Default: San Francisco -->
    <property id="City4Label" type="string">SF</property>
    <property id="City4Offset" type="number">-8</property>
    <property id="City4DST" type="boolean">false</property>
</properties>
