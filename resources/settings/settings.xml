    </setting>
    <setting propertyKey="@Properties.City2DST" title="@Strings.City2DSTTitle">
        <settingConfig type="boolean" />
    </setting>

    <!-- City 3 Settings (Bottom Left) -->
    <setting propertyKey="@Properties.City3Label" title="@Strings.City3LabelTitle">
        <settingConfig type="alphaNumeric" maxLength="3" />
    </setting>
    <setting propertyKey="@Properties.City3Offset" title="@Strings.City3OffsetTitle">
        <settingConfig type="numeric" min="-12" max="14" />
    </setting>
    <setting propertyKey="@Properties.City3DST" title="@Strings.City3DSTTitle">
        <settingConfig type="boolean" />
    </setting>

    <!-- City 4 Settings (Bottom Right) -->
    <setting propertyKey="@Properties.City4Label" title="@Strings.City4LabelTitle">
        <settingConfig type="alphaNumeric" maxLength="3" />
    </setting>
    <setting propertyKey="@Properties.City4Offset" title="@Strings.City4OffsetTitle">
