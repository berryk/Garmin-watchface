<?xml version="1.0" encoding="utf-8"?>
<!--
    Connect IQ Settings for GMT World Time Watchface
    These settings appear in Garmin Connect Mobile app
-->
<settings>
    <!-- City 1 Settings (Top Left) -->
    <setting propertyKey="@Properties.City1Label" title="@Strings.City1LabelTitle">
        <settingConfig type="alphaNumeric" maxLength="3" />
    </setting>
    <setting propertyKey="@Properties.City1Offset" title="@Strings.City1OffsetTitle">
        <settingConfig type="numeric" min="-12" max="14" />
    </setting>
    <setting propertyKey="@Properties.City1DST" title="@Strings.City1DSTTitle">
        <settingConfig type="boolean" />
    </setting>

    <!-- City 2 Settings (Top Right) -->
    <setting propertyKey="@Properties.City2Label" title="@Strings.City2LabelTitle">
